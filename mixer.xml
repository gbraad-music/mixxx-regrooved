<Template>
  <!-- Mixer Controls -->
  <WidgetGroup>
    <ObjectName>Deck<Variable name="DeckNum"/>MixerControls</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>min,me</SizePolicy>
    <MaximumSize>280,-1</MaximumSize>
    <Connection>
      <ConfigKey>[Master],show_extended_controls</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
    <Children>

      <!-- Left Spacing -->
      <WidgetGroup><SizePolicy>min,min</SizePolicy><MinimumSize>10,-1</MinimumSize></WidgetGroup>

      <!-- EQ Knobs (Vertical Stack) -->
      <WidgetGroup>
        <Layout>vertical</Layout>
        <SizePolicy>min,me</SizePolicy>
        <Children>

          <!-- HIGH -->
          <WidgetGroup>
            <Layout>vertical</Layout>
            <SizePolicy>me,me</SizePolicy>
            <Children>
              <Label>
                <ObjectName>MixerKnobLabel</ObjectName>
                <Text>HIGH</Text>
                <Alignment>center</Alignment>
                <MinimumSize>-1,15</MinimumSize>
              </Label>
              <Knob>
                <ObjectName>HighKnobDeck<Variable name="DeckNum"/></ObjectName>
                <TooltipId>filter_high</TooltipId>
                <Size>54,54</Size>
                <NumberStates>64</NumberStates>
                <Path>skin:images/knob%1.png</Path>
                <Connection>
                  <ConfigKey>[EqualizerRack1_[Channel<Variable name="DeckNum"/>]_Effect1],parameter3</ConfigKey>
                </Connection>
              </Knob>
            </Children>
          </WidgetGroup>

          <!-- Spacing -->
          <WidgetGroup><SizePolicy>min,min</SizePolicy><MinimumSize>-1,5</MinimumSize></WidgetGroup>

          <!-- MID -->
          <WidgetGroup>
            <Layout>vertical</Layout>
            <SizePolicy>me,me</SizePolicy>
            <Children>
              <Label>
                <ObjectName>MixerKnobLabel</ObjectName>
                <Text>MID</Text>
                <Alignment>center</Alignment>
                <MinimumSize>-1,15</MinimumSize>
              </Label>
              <Knob>
                <ObjectName>MidKnobDeck<Variable name="DeckNum"/></ObjectName>
                <TooltipId>filter_mid</TooltipId>
                <Size>54,54</Size>
                <NumberStates>64</NumberStates>
                <Path>skin:images/knob%1.png</Path>
                <Connection>
                  <ConfigKey>[EqualizerRack1_[Channel<Variable name="DeckNum"/>]_Effect1],parameter2</ConfigKey>
                </Connection>
              </Knob>
            </Children>
          </WidgetGroup>

          <!-- Spacing -->
          <WidgetGroup><SizePolicy>min,min</SizePolicy><MinimumSize>-1,5</MinimumSize></WidgetGroup>

          <!-- LOW -->
          <WidgetGroup>
            <Layout>vertical</Layout>
            <SizePolicy>me,me</SizePolicy>
            <Children>
              <Label>
                <ObjectName>MixerKnobLabel</ObjectName>
                <Text>LOW</Text>
                <Alignment>center</Alignment>
                <MinimumSize>-1,15</MinimumSize>
              </Label>
              <Knob>
                <ObjectName>LowKnobDeck<Variable name="DeckNum"/></ObjectName>
                <TooltipId>filter_low</TooltipId>
                <Size>54,54</Size>
                <NumberStates>64</NumberStates>
                <Path>skin:images/knob%1.png</Path>
                <Connection>
                  <ConfigKey>[EqualizerRack1_[Channel<Variable name="DeckNum"/>]_Effect1],parameter1</ConfigKey>
                </Connection>
              </Knob>
            </Children>
          </WidgetGroup>

        </Children>
      </WidgetGroup>

      <!-- Spacing -->
      <WidgetGroup><SizePolicy>min,min</SizePolicy><MinimumSize>10,-1</MinimumSize></WidgetGroup>

      <!-- Faders Horizontal -->
      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>min,me</SizePolicy>
        <Children>
          <!-- TEMPO Fader -->
          <WidgetGroup>
            <Layout>vertical</Layout>
            <SizePolicy>me,me</SizePolicy>
            <Children>
              <Label>
                <ObjectName>MixerKnobLabel</ObjectName>
                <Text>TEMPO</Text>
                <Alignment>center</Alignment>
                <MinimumSize>-1,15</MinimumSize>
              </Label>
              <SliderComposed>
                <ObjectName>TempoFaderDeck<Variable name="DeckNum"/></ObjectName>
                <Horizontal>false</Horizontal>
                <Size>40,90</Size>
                <MaximumSize>-1,236</MaximumSize>
                <Slider>skin:images/fader_background.svg</Slider>
                <Handle>skin:images/fader_handle.svg</Handle>
                <Connection>
                  <ConfigKey>[Channel<Variable name="DeckNum"/>],rate</ConfigKey>
                </Connection>
              </SliderComposed>
            </Children>
          </WidgetGroup>

          <!-- Spacing -->
          <WidgetGroup><SizePolicy>min,min</SizePolicy><MinimumSize>5,-1</MinimumSize></WidgetGroup>

          <!-- VOLUME Fader -->
          <WidgetGroup>
            <Layout>vertical</Layout>
            <SizePolicy>me,me</SizePolicy>
            <Children>
              <Label>
                <ObjectName>MixerKnobLabel</ObjectName>
                <Text>VOL <Variable name="DeckLetter"/></Text>
                <Alignment>center</Alignment>
                <MinimumSize>-1,15</MinimumSize>
              </Label>
              <SliderComposed>
                <ObjectName>VolumeFaderDeck<Variable name="DeckNum"/></ObjectName>
                <Horizontal>false</Horizontal>
                <Size>40,90</Size>
                <MaximumSize>-1,236</MaximumSize>
                <Slider>skin:images/fader_background.svg</Slider>
                <Handle>skin:images/fader_handle.svg</Handle>
                <Connection>
                  <ConfigKey>[Channel<Variable name="DeckNum"/>],volume</ConfigKey>
                </Connection>
              </SliderComposed>
            </Children>
          </WidgetGroup>
        </Children>
      </WidgetGroup>

      <!-- Right Spacing -->
      <WidgetGroup><SizePolicy>min,min</SizePolicy><MinimumSize>10,-1</MinimumSize></WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
