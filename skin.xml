<skin>
  <manifest>
    <title>Regrooved</title>
    <author>gbraad</author>
    <version>1.0.0</version>
    <description>A minimal skin with stacked waveforms and simple deck controls</description>
    <license>CC BY-SA 4.0</license>
    <attributes>
      <attribute config_key="[App],num_decks">2</attribute>
      <attribute config_key="[App],num_samplers">8</attribute>
      <attribute persist="true" config_key="[Tab],current">overview</attribute>
      <attribute persist="true" config_key="[Master],show_extended_controls">0</attribute>
    </attributes>
  </manifest>

  <ObjectName>Mixxx</ObjectName>
  <Style src="skin:style.qss"/>
  <MinimumSize>1000,600</MinimumSize>
  <SizePolicy>me,me</SizePolicy>
  <Layout>vertical</Layout>

  <Children>

    <!-- Top Bar: Overview/Library Toggle -->
    <WidgetGroup>
      <ObjectName>TopBar</ObjectName>
      <Layout>horizontal</Layout>
      <SizePolicy>me,min</SizePolicy>
      <MinimumSize>-1,40</MinimumSize>
      <MaximumSize>-1,40</MaximumSize>
      <Children>

        <Label>
          <ObjectName>AppTitle</ObjectName>
          <Text>REGROOVED</Text>
          <Alignment>left</Alignment>
          <SizePolicy>min,min</SizePolicy>
        </Label>

        <WidgetGroup><SizePolicy>me,min</SizePolicy></WidgetGroup>

        <!-- Extended Controls Toggle -->
        <PushButton>
          <ObjectName>ToggleExtendedButton</ObjectName>
          <Size>30,30</Size>
          <NumberStates>2</NumberStates>
          <State>
            <Number>0</Number>
            <Text>+</Text>
          </State>
          <State>
            <Number>1</Number>
            <Text>-</Text>
          </State>
          <Connection>
            <ConfigKey>[Master],show_extended_controls</ConfigKey>
            <EmitOnDownPress>true</EmitOnDownPress>
            <ButtonState>LeftButton</ButtonState>
          </Connection>
        </PushButton>

        <!-- View Tab Buttons -->
        <PushButton>
          <ObjectName>ShowOverviewButton</ObjectName>
          <Size>80,30</Size>
          <NumberStates>2</NumberStates>
          <State>
            <Number>0</Number>
            <Text>OVERVIEW</Text>
          </State>
          <State>
            <Number>1</Number>
            <Text>OVERVIEW</Text>
          </State>
          <Connection>
            <ConfigKey>[Tab],overview</ConfigKey>
          </Connection>
        </PushButton>

        <PushButton>
          <ObjectName>ShowLibraryButton</ObjectName>
          <Size>80,30</Size>
          <NumberStates>2</NumberStates>
          <State>
            <Number>0</Number>
            <Text>LIBRARY</Text>
          </State>
          <State>
            <Number>1</Number>
            <Text>LIBRARY</Text>
          </State>
          <Connection>
            <ConfigKey>[Tab],library</ConfigKey>
          </Connection>
        </PushButton>

        <PushButton>
          <ObjectName>ShowMixButton</ObjectName>
          <Size>60,30</Size>
          <NumberStates>2</NumberStates>
          <State>
            <Number>0</Number>
            <Text>MIX</Text>
          </State>
          <State>
            <Number>1</Number>
            <Text>MIX</Text>
          </State>
          <Connection>
            <ConfigKey>[Tab],mix</ConfigKey>
          </Connection>
        </PushButton>

        <PushButton>
          <ObjectName>ShowSamplersButton</ObjectName>
          <Size>80,30</Size>
          <NumberStates>2</NumberStates>
          <State>
            <Number>0</Number>
            <Text>SAMPLERS</Text>
          </State>
          <State>
            <Number>1</Number>
            <Text>SAMPLERS</Text>
          </State>
          <Connection>
            <ConfigKey>[Tab],samplers</ConfigKey>
          </Connection>
        </PushButton>

      </Children>
    </WidgetGroup>

    <!-- View Switcher -->
    <WidgetStack currentpage="[Tab],current">
      <SizePolicy>me,me</SizePolicy>
      <Children>

    <!-- Waveforms View -->
    <WidgetGroup trigger="[Tab],overview">
      <ObjectName>WaveformView</ObjectName>
      <Layout>horizontal</Layout>
      <SizePolicy>me,me</SizePolicy>
      <Children>

        <!-- Left Side: Deck Controls -->
        <WidgetGroup>
          <ObjectName>LeftControls</ObjectName>
          <Layout>vertical</Layout>
          <SizePolicy>f,me</SizePolicy>
          <MinimumSize>160,-1</MinimumSize>
          <MaximumSize>160,-1</MaximumSize>
          <Children>

            <!-- Deck A Controls -->
            <WidgetGroup>
              <ObjectName>DeckAControls</ObjectName>
              <Layout>vertical</Layout>
              <SizePolicy>me,min</SizePolicy>
              <Children>

                <Label>
                  <ObjectName>DeckControlLabel</ObjectName>
                  <Text>DECK A</Text>
                  <Alignment>center</Alignment>
                  <MinimumSize>-1,30</MinimumSize>
                  <MaximumSize>-1,30</MaximumSize>
                </Label>

                <!-- Extended Controls (visible when toggle is on) -->
                <WidgetGroup>
                  <ObjectName>ExtendedControlsDeck1</ObjectName>
                  <Layout>vertical</Layout>
                  <SizePolicy>me,min</SizePolicy>
                  <Connection>
                    <ConfigKey>[Master],show_extended_controls</ConfigKey>
                    <BindProperty>visible</BindProperty>
                  </Connection>
                  <Children>

                    <!-- Row 1: CUE and SYNC -->
                    <WidgetGroup>
                      <Layout>horizontal</Layout>
                      <SizePolicy>me,min</SizePolicy>
                      <Children>
                        <PushButton>
                          <ObjectName>CueButtonDeck1</ObjectName>
                          <Size>66,66</Size>
                          <NumberStates>1</NumberStates>
                          <State>
                            <Number>0</Number>
                            <Text>CUE</Text>
                          </State>
                          <Connection>
                            <ConfigKey>[Channel1],cue_default</ConfigKey>
                            <ButtonState>LeftButton</ButtonState>
                          </Connection>
                        </PushButton>

                        <WidgetGroup>
                          <SizePolicy>min,min</SizePolicy>
                          <MinimumSize>4,-1</MinimumSize>
                        </WidgetGroup>

                        <PushButton>
                          <ObjectName>SyncButtonDeck1</ObjectName>
                          <Size>66,66</Size>
                          <NumberStates>2</NumberStates>
                          <State>
                            <Number>0</Number>
                            <Text>SYNC</Text>
                          </State>
                          <State>
                            <Number>1</Number>
                            <Text>SYNC</Text>
                          </State>
                          <Connection>
                            <ConfigKey>[Channel1],sync_enabled</ConfigKey>
                            <ButtonState>LeftButton</ButtonState>
                          </Connection>
                        </PushButton>
                      </Children>
                    </WidgetGroup>

                    <WidgetGroup>
                      <SizePolicy>me,min</SizePolicy>
                      <MinimumSize>-1,4</MinimumSize>
                    </WidgetGroup>

                    <!-- Row 2: LOOP and PLAY -->
                    <WidgetGroup>
                      <Layout>horizontal</Layout>
                      <SizePolicy>me,min</SizePolicy>
                      <Children>
                        <PushButton>
                          <ObjectName>LoopButtonDeck1</ObjectName>
                          <Size>66,66</Size>
                          <NumberStates>2</NumberStates>
                          <State>
                            <Number>0</Number>
                            <Text>LOOP</Text>
                          </State>
                          <State>
                            <Number>1</Number>
                            <Text>LOOP</Text>
                          </State>
                          <Connection>
                            <ConfigKey>[Channel1],beatloop_4_enabled</ConfigKey>
                          </Connection>
                          <Connection>
                            <ConfigKey>[Channel1],beatloop_4_toggle</ConfigKey>
                            <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
                            <ButtonState>LeftButton</ButtonState>
                          </Connection>
                        </PushButton>

                        <WidgetGroup>
                          <SizePolicy>min,min</SizePolicy>
                          <MinimumSize>4,-1</MinimumSize>
                        </WidgetGroup>

                        <PushButton>
                          <ObjectName>PlayButtonDeck1Small</ObjectName>
                          <Size>66,66</Size>
                          <NumberStates>2</NumberStates>
                          <State>
                            <Number>0</Number>
                            <Text>PLAY</Text>
                          </State>
                          <State>
                            <Number>1</Number>
                            <Text>PLAY</Text>
                          </State>
                          <Connection>
                            <ConfigKey>[Channel1],play</ConfigKey>
                            <ButtonState>LeftButton</ButtonState>
                          </Connection>
                        </PushButton>
                      </Children>
                    </WidgetGroup>

                  </Children>
                </WidgetGroup>

                <!-- Big Play Button (visible when extended controls hidden) -->
                <WidgetGroup>
                  <Layout>vertical</Layout>
                  <SizePolicy>me,min</SizePolicy>
                  <Connection>
                    <ConfigKey>[Master],show_extended_controls</ConfigKey>
                    <Transform><Not/></Transform>
                    <BindProperty>visible</BindProperty>
                  </Connection>
                  <Children>
                    <PushButton>
                      <ObjectName>PlayButtonDeck1</ObjectName>
                      <Size>140,140</Size>
                      <NumberStates>2</NumberStates>
                      <State>
                        <Number>0</Number>
                        <Text>PLAY</Text>
                      </State>
                      <State>
                        <Number>1</Number>
                        <Text>PLAYING</Text>
                      </State>
                      <Connection>
                        <ConfigKey>[Channel1],play</ConfigKey>
                        <ButtonState>LeftButton</ButtonState>
                      </Connection>
                    </PushButton>
                  </Children>
                </WidgetGroup>

              </Children>
            </WidgetGroup>

            <!-- Spacer -->
            <WidgetGroup>
              <SizePolicy>me,min</SizePolicy>
              <MinimumSize>-1,10</MinimumSize>
            </WidgetGroup>

            <!-- Deck B Controls -->
            <WidgetGroup>
              <ObjectName>DeckBControls</ObjectName>
              <Layout>vertical</Layout>
              <SizePolicy>me,min</SizePolicy>
              <Children>

                <Label>
                  <ObjectName>DeckControlLabel</ObjectName>
                  <Text>DECK B</Text>
                  <Alignment>center</Alignment>
                  <MinimumSize>-1,30</MinimumSize>
                  <MaximumSize>-1,30</MaximumSize>
                </Label>

                <!-- Extended Controls (visible when toggle is on) -->
                <WidgetGroup>
                  <ObjectName>ExtendedControlsDeck2</ObjectName>
                  <Layout>vertical</Layout>
                  <SizePolicy>me,min</SizePolicy>
                  <Connection>
                    <ConfigKey>[Master],show_extended_controls</ConfigKey>
                    <BindProperty>visible</BindProperty>
                  </Connection>
                  <Children>

                    <!-- Row 1: CUE and SYNC -->
                    <WidgetGroup>
                      <Layout>horizontal</Layout>
                      <SizePolicy>me,min</SizePolicy>
                      <Children>
                        <PushButton>
                          <ObjectName>CueButtonDeck2</ObjectName>
                          <Size>66,66</Size>
                          <NumberStates>1</NumberStates>
                          <State>
                            <Number>0</Number>
                            <Text>CUE</Text>
                          </State>
                          <Connection>
                            <ConfigKey>[Channel2],cue_default</ConfigKey>
                            <ButtonState>LeftButton</ButtonState>
                          </Connection>
                        </PushButton>

                        <WidgetGroup>
                          <SizePolicy>min,min</SizePolicy>
                          <MinimumSize>4,-1</MinimumSize>
                        </WidgetGroup>

                        <PushButton>
                          <ObjectName>SyncButtonDeck2</ObjectName>
                          <Size>66,66</Size>
                          <NumberStates>2</NumberStates>
                          <State>
                            <Number>0</Number>
                            <Text>SYNC</Text>
                          </State>
                          <State>
                            <Number>1</Number>
                            <Text>SYNC</Text>
                          </State>
                          <Connection>
                            <ConfigKey>[Channel2],sync_enabled</ConfigKey>
                            <ButtonState>LeftButton</ButtonState>
                          </Connection>
                        </PushButton>
                      </Children>
                    </WidgetGroup>

                    <WidgetGroup>
                      <SizePolicy>me,min</SizePolicy>
                      <MinimumSize>-1,4</MinimumSize>
                    </WidgetGroup>

                    <!-- Row 2: LOOP and PLAY -->
                    <WidgetGroup>
                      <Layout>horizontal</Layout>
                      <SizePolicy>me,min</SizePolicy>
                      <Children>
                        <PushButton>
                          <ObjectName>LoopButtonDeck2</ObjectName>
                          <Size>66,66</Size>
                          <NumberStates>2</NumberStates>
                          <State>
                            <Number>0</Number>
                            <Text>LOOP</Text>
                          </State>
                          <State>
                            <Number>1</Number>
                            <Text>LOOP</Text>
                          </State>
                          <Connection>
                            <ConfigKey>[Channel2],beatloop_4_enabled</ConfigKey>
                          </Connection>
                          <Connection>
                            <ConfigKey>[Channel2],beatloop_4_toggle</ConfigKey>
                            <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
                            <ButtonState>LeftButton</ButtonState>
                          </Connection>
                        </PushButton>

                        <WidgetGroup>
                          <SizePolicy>min,min</SizePolicy>
                          <MinimumSize>4,-1</MinimumSize>
                        </WidgetGroup>

                        <PushButton>
                          <ObjectName>PlayButtonDeck2Small</ObjectName>
                          <Size>66,66</Size>
                          <NumberStates>2</NumberStates>
                          <State>
                            <Number>0</Number>
                            <Text>PLAY</Text>
                          </State>
                          <State>
                            <Number>1</Number>
                            <Text>PLAY</Text>
                          </State>
                          <Connection>
                            <ConfigKey>[Channel2],play</ConfigKey>
                            <ButtonState>LeftButton</ButtonState>
                          </Connection>
                        </PushButton>
                      </Children>
                    </WidgetGroup>

                  </Children>
                </WidgetGroup>

                <!-- Big Play Button (visible when extended controls hidden) -->
                <WidgetGroup>
                  <Layout>vertical</Layout>
                  <SizePolicy>me,min</SizePolicy>
                  <Connection>
                    <ConfigKey>[Master],show_extended_controls</ConfigKey>
                    <Transform><Not/></Transform>
                    <BindProperty>visible</BindProperty>
                  </Connection>
                  <Children>
                    <PushButton>
                      <ObjectName>PlayButtonDeck2</ObjectName>
                      <Size>140,140</Size>
                      <NumberStates>2</NumberStates>
                      <State>
                        <Number>0</Number>
                        <Text>PLAY</Text>
                      </State>
                      <State>
                        <Number>1</Number>
                        <Text>PLAYING</Text>
                      </State>
                      <Connection>
                        <ConfigKey>[Channel2],play</ConfigKey>
                        <ButtonState>LeftButton</ButtonState>
                      </Connection>
                    </PushButton>
                  </Children>
                </WidgetGroup>

              </Children>
            </WidgetGroup>

          </Children>
        </WidgetGroup>

        <!-- Right Side: Waveforms -->
        <WidgetGroup>
          <ObjectName>WaveformsRight</ObjectName>
          <Layout>vertical</Layout>
          <SizePolicy>me,me</SizePolicy>
          <Children>

        <!-- Deck 1 Waveform -->
        <WidgetGroup>
          <ObjectName>Deck1WaveformContainer</ObjectName>
          <Layout>vertical</Layout>
          <SizePolicy>me,i</SizePolicy>
          <Children>

            <WidgetGroup>
              <ObjectName>DeckLabelGroup</ObjectName>
              <Layout>horizontal</Layout>
              <SizePolicy>me,min</SizePolicy>
              <MinimumSize>-1,25</MinimumSize>
              <MaximumSize>-1,25</MaximumSize>
              <Children>
                <Label>
                  <ObjectName>DeckLabel</ObjectName>
                  <Text>DECK A</Text>
                  <Alignment>left</Alignment>
                  <SizePolicy>min,min</SizePolicy>
                </Label>
                <WidgetGroup><SizePolicy>min,min</SizePolicy><MinimumSize>10,-1</MinimumSize></WidgetGroup>
                <TrackProperty>
                  <ObjectName>DeckLabel</ObjectName>
                  <Property>title</Property>
                  <Channel>1</Channel>
                  <SizePolicy>me,min</SizePolicy>
                  <Alignment>left</Alignment>
                </TrackProperty>
                <WidgetGroup><SizePolicy>min,min</SizePolicy><MinimumSize>10,-1</MinimumSize></WidgetGroup>
                <NumberBpm>
                  <ObjectName>DeckLabel</ObjectName>
                  <Channel>1</Channel>
                  <SizePolicy>min,min</SizePolicy>
                  <Alignment>left</Alignment>
                  <Connection>
                    <ConfigKey>[Channel1],visual_bpm</ConfigKey>
                  </Connection>
                </NumberBpm>
                <Label>
                  <ObjectName>DeckLabel</ObjectName>
                  <Text> BPM</Text>
                  <Alignment>left</Alignment>
                  <SizePolicy>min,min</SizePolicy>
                </Label>
                <WidgetGroup><SizePolicy>me,min</SizePolicy></WidgetGroup>
              </Children>
            </WidgetGroup>

            <Overview>
              <ObjectName>OverviewDeck1</ObjectName>
              <Channel>1</Channel>
              <SizePolicy>me,min</SizePolicy>
              <MinimumSize>-1,60</MinimumSize>
              <MaximumSize>-1,60</MaximumSize>
              <BgColor>#000000</BgColor>
              <SignalColor>#4080FF</SignalColor>
              <SignalLowColor>#0040A0</SignalLowColor>
              <SignalMidColor>#4080FF</SignalMidColor>
              <SignalHighColor>#80C0FF</SignalHighColor>
              <PlayPosColor>#00FF00</PlayPosColor>
              <MarkerColor>#FF0000</MarkerColor>
              <Mark>
                <Control>loop_start_position</Control>
                <Color>#FFEE00</Color>
                <Align>bottom</Align>
              </Mark>
              <Mark>
                <Control>loop_end_position</Control>
                <Color>#FFEE00</Color>
                <Align>bottom</Align>
              </Mark>
              <MarkRange>
                <StartControl>loop_start_position</StartControl>
                <EndControl>loop_end_position</EndControl>
                <EnabledControl>loop_enabled</EnabledControl>
                <Color>#FFEE0080</Color>
              </MarkRange>
            </Overview>

            <Visual>
              <ObjectName>WaveformDeck1</ObjectName>
              <Channel>1</Channel>
              <SizePolicy>me,me</SizePolicy>
              <BgColor>#000000</BgColor>
              <SignalColor>#4080FF</SignalColor>
              <SignalLowColor>#0040A0</SignalLowColor>
              <SignalMidColor>#4080FF</SignalMidColor>
              <SignalHighColor>#80C0FF</SignalHighColor>
              <BeatColor>#FFFFFF</BeatColor>
              <PlayPosColor>#00FF00</PlayPosColor>
              <AxesColor>#333333</AxesColor>
              <MarkerColor>#FF0000</MarkerColor>
              <Mark>
                <Control>loop_start_position</Control>
                <Color>#FFEE00</Color>
                <Align>bottom</Align>
              </Mark>
              <Mark>
                <Control>loop_end_position</Control>
                <Color>#FFEE00</Color>
                <Align>bottom</Align>
              </Mark>
              <MarkRange>
                <StartControl>loop_start_position</StartControl>
                <EndControl>loop_end_position</EndControl>
                <EnabledControl>loop_enabled</EnabledControl>
                <Color>#FFEE0080</Color>
              </MarkRange>
            </Visual>

          </Children>
        </WidgetGroup>

        <!-- Deck 2 Waveform -->
        <WidgetGroup>
          <ObjectName>Deck2WaveformContainer</ObjectName>
          <Layout>vertical</Layout>
          <SizePolicy>me,i</SizePolicy>
          <Children>

            <WidgetGroup>
              <ObjectName>DeckLabelGroup</ObjectName>
              <Layout>horizontal</Layout>
              <SizePolicy>me,min</SizePolicy>
              <MinimumSize>-1,25</MinimumSize>
              <MaximumSize>-1,25</MaximumSize>
              <Children>
                <Label>
                  <ObjectName>DeckLabel</ObjectName>
                  <Text>DECK B</Text>
                  <Alignment>left</Alignment>
                  <SizePolicy>min,min</SizePolicy>
                </Label>
                <WidgetGroup><SizePolicy>min,min</SizePolicy><MinimumSize>10,-1</MinimumSize></WidgetGroup>
                <TrackProperty>
                  <ObjectName>DeckLabel</ObjectName>
                  <Property>title</Property>
                  <Channel>2</Channel>
                  <SizePolicy>me,min</SizePolicy>
                  <Alignment>left</Alignment>
                </TrackProperty>
                <WidgetGroup><SizePolicy>min,min</SizePolicy><MinimumSize>10,-1</MinimumSize></WidgetGroup>
                <NumberBpm>
                  <ObjectName>DeckLabel</ObjectName>
                  <Channel>2</Channel>
                  <SizePolicy>min,min</SizePolicy>
                  <Alignment>left</Alignment>
                  <Connection>
                    <ConfigKey>[Channel2],visual_bpm</ConfigKey>
                  </Connection>
                </NumberBpm>
                <Label>
                  <ObjectName>DeckLabel</ObjectName>
                  <Text> BPM</Text>
                  <Alignment>left</Alignment>
                  <SizePolicy>min,min</SizePolicy>
                </Label>
                <WidgetGroup><SizePolicy>me,min</SizePolicy></WidgetGroup>
              </Children>
            </WidgetGroup>

            <Overview>
              <ObjectName>OverviewDeck2</ObjectName>
              <Channel>2</Channel>
              <SizePolicy>me,min</SizePolicy>
              <MinimumSize>-1,60</MinimumSize>
              <MaximumSize>-1,60</MaximumSize>
              <BgColor>#000000</BgColor>
              <SignalColor>#FF4080</SignalColor>
              <SignalLowColor>#A00040</SignalLowColor>
              <SignalMidColor>#FF4080</SignalMidColor>
              <SignalHighColor>#FF80C0</SignalHighColor>
              <PlayPosColor>#00FF00</PlayPosColor>
              <MarkerColor>#FF0000</MarkerColor>
              <Mark>
                <Control>loop_start_position</Control>
                <Color>#FFEE00</Color>
                <Align>bottom</Align>
              </Mark>
              <Mark>
                <Control>loop_end_position</Control>
                <Color>#FFEE00</Color>
                <Align>bottom</Align>
              </Mark>
              <MarkRange>
                <StartControl>loop_start_position</StartControl>
                <EndControl>loop_end_position</EndControl>
                <EnabledControl>loop_enabled</EnabledControl>
                <Color>#FFEE0080</Color>
              </MarkRange>
            </Overview>

            <Visual>
              <ObjectName>WaveformDeck2</ObjectName>
              <Channel>2</Channel>
              <SizePolicy>me,me</SizePolicy>
              <BgColor>#000000</BgColor>
              <SignalColor>#FF4080</SignalColor>
              <SignalLowColor>#A00040</SignalLowColor>
              <SignalMidColor>#FF4080</SignalMidColor>
              <SignalHighColor>#FF80C0</SignalHighColor>
              <BeatColor>#FFFFFF</BeatColor>
              <PlayPosColor>#00FF00</PlayPosColor>
              <AxesColor>#333333</AxesColor>
              <MarkerColor>#FF0000</MarkerColor>
              <Mark>
                <Control>loop_start_position</Control>
                <Color>#FFEE00</Color>
                <Align>bottom</Align>
              </Mark>
              <Mark>
                <Control>loop_end_position</Control>
                <Color>#FFEE00</Color>
                <Align>bottom</Align>
              </Mark>
              <MarkRange>
                <StartControl>loop_start_position</StartControl>
                <EndControl>loop_end_position</EndControl>
                <EnabledControl>loop_enabled</EnabledControl>
                <Color>#FFEE0080</Color>
              </MarkRange>
            </Visual>

          </Children>
        </WidgetGroup>

          </Children>
        </WidgetGroup>

      </Children>
    </WidgetGroup>

    <!-- Library View -->
    <WidgetGroup trigger="[Tab],library">
      <ObjectName>LibraryContainer</ObjectName>
      <Layout>vertical</Layout>
      <SizePolicy>me,me</SizePolicy>
      <Children>
        <Library>
          <ObjectName>LibraryWidget</ObjectName>
          <SizePolicy>me,me</SizePolicy>
        </Library>
      </Children>
    </WidgetGroup>

    <!-- MIX View -->
    <WidgetGroup trigger="[Tab],mix">
      <ObjectName>MixContainer</ObjectName>
      <Layout>vertical</Layout>
      <SizePolicy>me,me</SizePolicy>
      <Children>

        <!-- Top Section: Labels -->
        <WidgetGroup>
          <Layout>horizontal</Layout>
          <SizePolicy>me,min</SizePolicy>
          <MinimumSize>-1,30</MinimumSize>
          <MaximumSize>-1,30</MaximumSize>
          <Children>
            <WidgetGroup><SizePolicy>i,min</SizePolicy><MinimumSize>100,-1</MinimumSize></WidgetGroup>
            <Label>
              <ObjectName>MixerChannelLabel</ObjectName>
              <Text>DECK A</Text>
              <Alignment>center</Alignment>
              <SizePolicy>me,min</SizePolicy>
            </Label>
            <WidgetGroup><SizePolicy>i,min</SizePolicy><MinimumSize>150,-1</MinimumSize></WidgetGroup>
            <Label>
              <ObjectName>MixerChannelLabel</ObjectName>
              <Text>DECK B</Text>
              <Alignment>center</Alignment>
              <SizePolicy>me,min</SizePolicy>
            </Label>
            <WidgetGroup><SizePolicy>i,min</SizePolicy><MinimumSize>100,-1</MinimumSize></WidgetGroup>
          </Children>
        </WidgetGroup>

        <!-- Main Mixer Section -->
        <WidgetGroup>
          <ObjectName>MixerMainSection</ObjectName>
          <Layout>horizontal</Layout>
          <SizePolicy>me,me</SizePolicy>
          <Children>

            <!-- TEMPO A (Far Left) -->
            <WidgetGroup>
              <Layout>vertical</Layout>
              <SizePolicy>min,me</SizePolicy>
              <MinimumSize>90,-1</MinimumSize>
              <Children>
                <Label>
                  <ObjectName>MixerKnobLabel</ObjectName>
                  <Text>TEMPO A</Text>
                  <Alignment>center</Alignment>
                  <MinimumSize>-1,20</MinimumSize>
                </Label>
                <SliderComposed>
                  <ObjectName>TempoFaderDeck1</ObjectName>
                  <Horizontal>false</Horizontal>
                  <Size>80,450</Size>
                  <Slider>skin:images/fader_background_tempo.svg</Slider>
                  <Handle>skin:images/fader_handle.svg</Handle>
                  <Connection>
                    <ConfigKey>[Channel1],rate</ConfigKey>
                  </Connection>
                </SliderComposed>
              </Children>
            </WidgetGroup>

            <!-- DECK A Knobs (Vertical Column) -->
            <WidgetGroup>
              <Layout>vertical</Layout>
              <SizePolicy>min,me</SizePolicy>
              <MinimumSize>130,-1</MinimumSize>
              <Children>

                <!-- GAIN A -->
                <WidgetGroup>
                  <Layout>vertical</Layout>
                  <SizePolicy>me,min</SizePolicy>
                  <Children>
                    <Label>
                      <ObjectName>MixerKnobLabel</ObjectName>
                      <Text>GAIN A</Text>
                      <Alignment>center</Alignment>
                      <MinimumSize>-1,20</MinimumSize>
                    </Label>
