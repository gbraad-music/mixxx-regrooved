/* Regrooved Skin Stylesheet - Pure Black Theme */

/* Main Container */
#MainContainer {
    background-color: #000000;
    color: #ffffff;
}

/* Menu Bar */
QMenuBar {
    background-color: #1a1a1a;
    color: #888888;
    border: none;
    padding: 2px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 4px 8px;
}

QMenuBar::item:selected {
    background-color: #2a2a2a;
    color: #ffffff;
}

QMenuBar::item:pressed {
    background-color: #0066FF;
    color: #ffffff;
}

/* Menu Dropdowns */
QMenu {
    background-color: #1a1a1a;
    color: #888888;
    border: 1px solid #2a2a2a;
}

QMenu::item {
    padding: 6px 30px;
}

QMenu::item:selected {
    background-color: #0066FF;
    color: #ffffff;
}

QMenu::item:disabled {
    color: #444444;
}

QMenu::separator {
    height: 1px;
    background-color: #2a2a2a;
    margin: 4px 0px;
}

/* Top Bar */
#TopBar {
    background-color: #000000;
    border-bottom: 1px solid #111111;
    padding: 5px 10px;
}

#AppTitle {
    font-size: 14px;
    font-weight: bold;
    color: #555555;
    letter-spacing: 2px;
    padding: 5px 10px;
}

/* Extended Controls Toggle Button */
#ToggleExtendedButton {
    background-color: #CC6600;
    color: #ffffff;
    border: 1px solid #FF8800;
    border-radius: 4px;
    font-size: 11px;
    font-weight: bold;
    padding: 6px 12px;
    margin: 0px 3px;
}

#ToggleExtendedButton:hover {
    background-color: #DD7700;
    color: #ffffff;
}

#ToggleExtendedButton[value="1"] {
    background-color: #FF8800;
    color: #ffffff;
    border-color: #FFAA00;
}

/* Deck Mode Toggle Buttons */
#ToggleDeckModeButton,
#Toggle4DecksButton {
    background-color: #CC6600;
    color: #ffffff;
    border: 1px solid #FF8800;
    border-radius: 4px;
    font-size: 11px;
    font-weight: bold;
    padding: 6px 12px;
    margin: 0px 3px;
}

#ToggleDeckModeButton:hover,
#Toggle4DecksButton:hover {
    background-color: #DD7700;
    color: #ffffff;
}

#ToggleDeckModeButton[value="1"],
#Toggle4DecksButton[value="1"] {
    background-color: #FF8800;
    color: #ffffff;
    border-color: #FFAA00;
}

/* Deck Selector Buttons */
#ShowBothDecksButton,
#ShowFourDecksButton,
#ShowDeckAButton,
#ShowDeckBButton,
#ShowDeckCButton,
#ShowDeckDButton,
#ToggleLayoutButton,
#Toggle4DeckLayoutButton {
