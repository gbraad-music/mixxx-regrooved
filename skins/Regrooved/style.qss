/* Library Widget */
#LibraryWidget {
    background-color: #000000;
    color: #888888;
    border: none;
    margin: 0px;
}

QTableView {
    background-color: #000000;
    color: #888888;
    gridline-color: #0a0a0a;
    selection-background-color: #0066FF;
    selection-color: #ffffff;
    border: none;
    alternate-background-color: #000000;
    font-size: 20px;
}

QTableView::item {
    background-color: #000000;
    padding: 6px;
}

QTableView::item:alternate {
    background-color: #000000;
}

QTableView::item:hover {
    background-color: #0a0a0a;
}

QHeaderView::section {
    background-color: #000000;
    color: #555555;
    border: 1px solid #0a0a0a;
    padding: 4px;
    font-weight: bold;
    font-size: 18px;
}

QScrollBar:vertical {
    background-color: #000000;
    width: 10px;
    border: none;
}

QScrollBar::handle:vertical {
    background-color: #1a1a1a;
    border-radius: 0px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #2a2a2a;
}

QScrollBar:horizontal {
    background-color: #000000;
    height: 10px;
    border: none;
}

QScrollBar::handle:horizontal {
    background-color: #1a1a1a;
    border-radius: 0px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #2a2a2a;
}

QScrollBar::add-line,
QScrollBar::sub-line {
    border: none;
    background: none;
}

/* Searchbox */
WSearchLineEdit {
    background-color: #0a0a0a;
    color: #888888;
    border: 1px solid #1a1a1a;
    border-radius: 0px;
    padding: 4px;
    font-size: 11px;
}

WSearchLineEdit:focus {
    border-color: #0066FF;
    color: #ffffff;
}

/* Sidebar */
QTreeView {
