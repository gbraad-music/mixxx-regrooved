#PlayButtonDeck2Small:pressed,
#PlayButtonDeck3Small:pressed,
#PlayButtonDeck4Small:pressed {
    background-color: #990000;
    border-color: #880000;
}

#PlayButtonDeck1[value="1"],
#PlayButtonDeck2[value="1"],
#PlayButtonDeck3[value="1"],
#PlayButtonDeck4[value="1"],
#PlayButtonDeck1Small[value="1"],
#PlayButtonDeck2Small[value="1"],
#PlayButtonDeck3Small[value="1"],
#PlayButtonDeck4Small[value="1"] {
