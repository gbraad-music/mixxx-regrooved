    color: #888888;
}

#ShowBothDecksButton[value="1"] {
    background-color: #0066FF;
    color: #ffffff;
    border-color: #0066FF;
}

#ShowFourDecksButton[value="1"] {
    background-color: #00CC88;
    color: #ffffff;
    border-color: #00FF99;
}

#ShowDeckAButton[value="1"] {
    background-color: #FF0000;
    color: #ffffff;
    border-color: #FF0000;
}

#ShowDeckBButton[value="1"] {
    background-color: #0000FF;
    color: #ffffff;
    border-color: #0000FF;
}

#ShowDeckCButton[value="1"] {
    background-color: #00FF00;
    color: #000000;
    border-color: #00FF00;
}

#ShowDeckDButton[value="1"] {
    background-color: #FFFF00;
    color: #000000;
    border-color: #FFFF00;
}

#ToggleLayoutButton[value="1"] {
    background-color: #00AA66;
    color: #ffffff;
    border-color: #00DD88;
}

#Toggle4DeckLayoutButton[value="1"] {
    background-color: #CC8800;
    color: #ffffff;
    border-color: #FFAA00;
}

/* View Toggle Buttons */
#ShowOverviewButton,
#ShowMixButton,
#ShowSamplersButton {
    background-color: #1a1a1a;
    color: #666666;
    border: 1px solid #222222;
    border-radius: 4px;
    font-size: 11px;
    font-weight: bold;
    padding: 6px 12px;
