    color: #ffffff;
    border-color: #0066FF;
}

/* Library Button - Different color scheme */
#ShowLibraryButton {
    background-color: #1a1a1a;
    color: #666666;
    border: 1px solid #222222;
    border-radius: 4px;
    font-size: 11px;
    font-weight: bold;
    padding: 6px 12px;
    margin: 0px 3px;
}

#ShowLibraryButton:hover {
