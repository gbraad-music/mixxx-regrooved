}


/* Waveform Containers */
#WaveformStack {
    background-color: #000000;
    padding: 0px;
}

#DeckLabel {
    background-color: #000000;
    color: #555555;
    font-size: 11px;
    font-weight: bold;
    letter-spacing: 1px;
    padding: 3px;
